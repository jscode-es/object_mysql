{
  "name": "object_mysql",
  "version": "2.0.0",
  "description": "Recuperar bases de datos en formato objecto de Javascript",
  "main": "dist/index.js",
  "scripts": {
    "app": "npm run build && node ./index.js",
    "start": "npm run dev --silent",
    "dev": "cross-env NODE_ENV=development nodemon --config ./setting/nodemon.json",
    "build": "tsc -p ./setting",
    "test": "npm run build && jest -c ./setting/jest.config.js",
    "clean:build": "rimraf ./dist ",
    "jest": "jest --init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscode-es/object_mysql.git"
  },
  "keywords": [
    "mysql",
    "promise",
    "object"
  ],
  "author": "( JSCode ) Sergio Gonz√°lez Garrido",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jscode-es/object_mysql/issues"
  },
  "homepage": "https://github.com/jscode-es/object_mysql#readme",
  "nodemonConfig": {
    "watch": [
      "src/**/*"
    ],
    "ext": "ts",
    "exec": "npm run build && node ./dist/index.js",
    "verbose": false,
    "legacyWatch": true
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "29.2.0",
    "@types/joi": "17.2.3",
    "@types/node": "18.11.7",
    "cross-env": "7.0.3",
    "dotenv": "^16.0.3",
    "jest": "29.2.2",
    "nodemon": "2.0.20",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@joi/date": "^2.1.0",
    "joi": "17.6.4",
    "promise-mysql": "5.2.0"
  }
}